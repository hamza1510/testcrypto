<div class="currencies-form">
	<% if @currency.errors.any? %>
		<% @currency.errors.full_messages.each do |error| %>
			<li><%= error %></li>
		<% end %>
	<% end %>

	<%= form_for @currency do |f| %>
		<div class="form-group">
			<%= f.label :name %>
			<%= f.select :name, options_for_select(@coins.collect{ |c| c['name'] }, @currency.name) %>
		</div>
		<div class="form-group">
			<%= f.label :amount %>
			<p>Use the period "." punctuation mark as seperator.</p>
			<%= f.text_field :amount, class: "form-control" %>
		</div>
		<%= f.submit class: "btn btn-sm btn-success" %>
	<% end %>
</div>